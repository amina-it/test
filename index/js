// Сцены новеллы
const scenes = {
    start: {
        text: "Вы стоите у дороги. Куда пойдёте?",
        options: [
            { text: "Направо", nextScene: "rightPath" },
            { text: "Налево", nextScene: "leftPath" }
        ]
    },
    rightPath: {
        text: "Вы идёте направо и находите странный дом. Что делать?",
        options: [
            { text: "Зайти в дом", nextScene: "enterHouse" },
            { text: "Уйти", nextScene: "start" }
        ]
    },
    leftPath: {
        text: "Вы идёте налево и встречаете старика. Он просит помощи. Что делать?",
        options: [
            { text: "Помочь старику", nextScene: "helpOldMan" },
            { text: "Пройти мимо", nextScene: "start" }
        ]
    },
    enterHouse: {
        text: "Вы вошли в дом. История продолжается..."
    },
    helpOldMan: {
        text: "Вы помогли старику, и он дарит вам волшебный амулет."
    }
};

// Текущая сцена
let currentScene = "start";

// Элементы страницы
const textElement = document.getElementById("story-text");
const optionsElement = document.getElementById("options");

// Показать сцену
function showScene(sceneKey) {
    const scene = scenes[sceneKey];
    textElement.textContent = scene.text;

    // Удалить старые кнопки
    optionsElement.innerHTML = "";

    // Добавить новые кнопки
    if (scene.options) {
        scene.options.forEach(option => {
            const button = document.createElement("button");
            button.textContent = option.text;
            button.onclick = () => showScene(option.nextScene);
            optionsElement.appendChild(button);
        });
    }
}

// Инициализация
showScene(currentScene);
